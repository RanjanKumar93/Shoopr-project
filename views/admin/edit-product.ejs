<%- include('../includes/head.ejs') %>
</head>

<body class="h-full grid grid-rows-[4rem_auto]">
   <%- include('../includes/navigation.ejs') %>

    <main class="max-w-full text-center bg-slate-600 h-full">
        <form class="max-w-6xl px-10 mx-auto grid grid-cols-2 gap-1 mt-2 p-2 text-2xl font-extrabold text-zinc-950" action="/admin/<% if (editing) { %>edit-product<% } else { %>add-product<% } %>" method="POST">
            
                <label for="title">Title</label>
                <input type="text" required class="text-zinc-950 px-2 py-1 rounded-xl font-sans font-medium" name="title" id="title" value="<% if (editing) { %><%= product.title %><% } %>">
            
                <label for="imageUrl">Image URL</label>
                <input type="text" class="text-zinc-950 px-2 py-1 rounded-xl font-sans font-medium" name="imageUrl" id="imageUrl" value="<% if (editing) { %><%= product.imageurl %><% } %>">
            
                <label for="price">Price</label>
                <input type="number" required class="text-zinc-950 px-2 py-1 rounded-xl font-sans font-medium" name="price" id="price" step="0.01" value="<% if (editing) { %><%= product.price %><% } %>">
            
                <label for="description">Description</label>
                <textarea name="description" class="text-zinc-950 px-2 py-1 rounded-xl font-sans font-medium" id="description" rows="5"><% if (editing) { %><%= product.description %><% } %></textarea>
           
            <% if (editing) { %>
                <input type="hidden" class="text-zinc-950 px-2 py-1 rounded-xl font-sans font-medium" value="<%= product.id %>" name="productId">
            <% } %>

            <button class="btn font-medium bg-blue-950 w-64 px-2 py-1 rounded-full text-white hover:bg-slate-700" type="submit"><% if (editing) { %>Update Product<% } else { %>Add Product<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>